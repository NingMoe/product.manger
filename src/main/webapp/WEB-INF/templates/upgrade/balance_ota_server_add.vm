                                       placeholder="Server Port" style="text-align: center;border-radius: 4px">
                                <span class="input-group-btn">
                                  <button type="button" class="btn btn-info btn-flat"
                                          onclick="addNewServer()">Go!</button>
                                </span>
                            </div>
                        </div>

                </form>
            </div>
        </div>
    </div>
</section>

