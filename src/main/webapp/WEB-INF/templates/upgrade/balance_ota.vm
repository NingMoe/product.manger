<link rel="stylesheet" href="$baseUrl/resources/css/statistic/layout.css">

<section class="content">
    <div class="col-md-12">
        <div class="box box-info">
            <div class="input-group input-group-sm col-md-12">
                <div class="box-header">
                    <h3 class="box-title">电子秤Ota升级</h3>
                </div>
                <form role="form" enctype="multipart/form-data" id="uploadFile">
                    <div class="box-body">
                        <div class="form-group">
                            <label for="version">固件版本号</label>
                            <input type="number" class="form-control" id="version" name="version" placeholder="version">
                        </div>
                        <div class="form-group">
                            <label for="environment">环境（测试/生产）</label>
                            <select class="form-control select2" style="width: 100%;" id="environment"
                                    name="environment">
                                <option selected="selected"></option>
                                <option>test</option>
                                <option>prod</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="aFile">File input</label>
                            <input type="file" id="aFile" name="aFile">
                            <p class="help-block">例如：PHI_CS-HWR701_V0.4.17B_0.bin</p>
                        </div>
                        <div class="form-group">
                            <label for="bFile">File input</label>
                            <input type="file" id="bFile" name="bFile">
                            <p class="help-block">例如：PHI_CS-HWR701_V0.4.17B_0.bin</p>
                        </div>
                    </div>
                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary" onclick="uploadFile()">上传</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

<script>
    function uploadFile() {
        var formData = new FormData($("#uploadFile")[0]);
        $.ajax({
            type: "POST",
            url: "$baseUrl/balance/ota/upload",
            data: formData,
            async: false,
            cache: false,
            contentType: false,
            processData: false,
            dataType: 'json',
            error: function (req, status, err) {
                alert('Failed reason: ' + err);
            }, success: function (data) {
                var status = data.status;
                if (status != 0) {
                    alert('Error !');
                } else {
                    var result = data.data;
                    console.info(result);
                    if (data.status == 0 && result != null) {
                        alert('success ');
                    } else {
                        alert('fail !');
                    }
                }

            }
        })
    }
</script>