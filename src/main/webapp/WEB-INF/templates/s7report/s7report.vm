                            <label for="IOSActiveUserCount" class="col-sm-5 control-label">IOS活跃用户</label>
                            <div class="col-sm-7">
                                <input type="number" class="form-control pull-right" id="iosActive" value="0"
                                       oninput="checkNum('iosActive',this.value)"/>
                            </div>
                        </div>
                        <div class="form-group col-md-4">
                            <label for="AndroidActiveUserCount" class="col-sm-5 control-label">Android活跃用户</label>
                            <div class="col-sm-7">
                                <input type="number" class="form-control pull-right" id="androidActive" value="0"
                                       oninput="checkNum('androidActive',this.value)"/>
                            </div>
                        </div>
                        <div class="form-group col-md-1" style="margin-left: 50px">
                            <div>
                                <button type="button" class="btn btn-primary pull-right phicomm_button_go"
                                        onclick="getAll()">
                                    提交
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <script>
        function checkNum(name, val) {
            document.getElementById(name).value = (val <= 0 || val == null ? 0 : val);
            console.log(val);
        }



        Date.prototype.format = function(format) {
            var date = {
                "M+": this.getMonth() + 1,
                "d+": this.getDate(),
                "h+": this.getHours(),
                "m+": this.getMinutes(),
                "s+": this.getSeconds(),
                "q+": Math.floor((this.getMonth() + 3) / 3),
                "S+": this.getMilliseconds()
            };
            if (/(y+)/i.test(format)) {
                format = format.replace(RegExp.$1, (this.getFullYear() + '').substr(4 - RegExp.$1.length));
            }
            for (var k in date) {
                if (new RegExp("(" + k + ")").test(format)) {
                    format = format.replace(RegExp.$1, RegExp.$1.length == 1 ? date[k] : ("00" + date[k]).substr(("" + date[k]).length));
                }
            }
            return format;
        }

        function gettodayDate(){
            return new Date().format("yyyy-MM-dd");
        }

        //首次加载时执行

        var element1 = document.getElementById('activationDate');
        element1.value = gettodayDate();
        var element2 = document.getElementById('activeuserDate');
        element2.value = gettodayDate();
        console.log("----选择的日期--begin-" + gettodayDate());
    </script>
