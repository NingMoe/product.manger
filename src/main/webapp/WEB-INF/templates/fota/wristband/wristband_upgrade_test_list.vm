<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">手环固件列表</h3>
                </div>
                <div class="box-body">
                    <table id="wristbandTestList" class="table table-bordered table-striped">
                        <thead>
                        <tr>
                            <th></th>
                            <th>APP名字</th>
                            <th>固件类型</th>
                            <th>硬件版本号</th>
                            <th>固件版本</th>
                            <th>固件版本号</th>
                        </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="wristbandTestModal" tabindex="-1" role="dialog" aria-labelledby="wristbandTestModal">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                    <h4 class="modal-title" id="wristbandTestModal">编辑</h4>
                </div>
                <form role="form" enctype="multipart/form-data" id="updateWristband">
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="id">ID</label>
                            <input type="text" readonly="readonly" class="form-control" id="id" name="id" placeholder="ID">
                        </div>
                        <div class="form-group">
                            <label for="appName">APP名字</label>
                            <input type="text" readonly="readonly" class="form-control" id="appName" name="appName" placeholder="APP名字">
                        </div>
                        <div class="form-group">
                            <label for="appPlatform">APP平台</label>
                            <input type="text" readonly="readonly" class="form-control" id="appPlatform" name="appPlatform" placeholder="APP平台">
                        </div>
                        <div class="form-group">
                            <label for="appVersionCode">APP版本号</label>
                            <input type="text" readonly="readonly" class="form-control" id="appVersionCode" name="appVersionCode" placeholder="APP版本号">
                        </div>
                        <div class="form-group">
                            <label id="coverUrlLabel" for="coverUrl"><font style="color: red">*</font>封面URL</label>
                            <input type="text" class="form-control" id="coverUrl" name="coverUrl" placeholder="文章封面URL">
                        </div>
                        <div class="form-group">
                            <label id="contentUrlLabel" for="contentUrl"><font style="color: red">*</font>正文URL</label>
                            <input type="text" class="form-control" id="contentUrl" name="contentUrl" placeholder="文章正文URL">
                        </div>
                        <div class="form-group">
                            <label for="summary"><font style="color: red">*</font>简介</label>
                            <textarea rows="3" cols="80" name="summary" class="form-control" id="summary" placeholder="文章简介"></textarea>
                        </div>
                        <div class="form-group">
                            <input type="hidden" class="form-control" id="type" name="type" value="test">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span>关闭</button>
                        <button type="button" id="btn_submit" class="btn btn-primary" onclick="updateEssay();">保存</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
