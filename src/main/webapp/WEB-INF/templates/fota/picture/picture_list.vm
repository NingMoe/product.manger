<link rel="stylesheet" href="$baseUrl/resources/datatable/dataTables.bootstrap.css">
<link rel="stylesheet" href="$baseUrl/resources/css/datatables/datatables.css">
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">图片列表</h3>
                </div>
                <div class="box-body">
                    <table id="essayList" class="table table-bordered table-striped">
                        <thead>
                        <tr>
                            <th>版本号</th>
                            <th>图片ID</th>
                            <th>中文名称</th>
                            <th>英文名称</th>
                            <th>存储路径</th>
                            <th>创建时间</th>
                            <th width="5%">操作</th>
                        </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="essayModal" tabindex="-1" role="dialog" aria-labelledby="essayModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                    <h4 class="modal-title" id="essayModalLabel">编辑</h4>
                </div>
                <form role="form" enctype="multipart/form-data" id="updateEssay">
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="essayId"><font style="color: red">*</font>ID</label>
                            <input type="text" readonly="readonly"  class="form-control" id="essayId" name="essayId" placeholder="图片编号">
                        </div>
                        <div class="form-group">
                            <label for="title"><font style="color: red">*</font>中文名</label>
                            <input type="text" class="form-control" id="title" name="title" placeholder="图片英文名">
                        </div>
                        <div class="form-group">
                            <label for="subtitle"><font style="color: red">*</font>英文名</label>
                            <input type="text" class="form-control" id="subtitle" name="subtitle" placeholder="图片英文名">
                        </div>
                        <div class="form-group">
                            <label for="summary"><font style="color: red">*</font>图片路径</label>
                            <textarea rows="3" cols="80" name="summary" class="form-control" id="summary" placeholder="图片路径"></textarea>
                        </div>
                        <div class="form-group">
                            <label for="summary"><font style="color: red">*</font>创建时间</label>
                            <textarea rows="3" cols="80" name="summary" class="form-control" id="summary" placeholder="图片路径"></textarea>
                        </div>

                    </div>

                </form>
            </div>
        </div>
    </div>
</section>

<script type="text/javascript" src="$baseUrl/resources/jquery/jquery.min.js"></script>
<script type="text/javascript" src="$baseUrl/resources/datatable/jquery.dataTables.min.js"></script>
<script type="text/javascript" src="$baseUrl/resources/datatable/dataTables.bootstrap.min.js"></script>
